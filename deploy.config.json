{
  "environments": {
    "local": {
      "name": "Local Development (localhost)",
      "host": "localhost",
      "path": "C:\\Users\\Geeks\\Documents\\acps.zip\\uniserver\\www",
      "method": "copy",
      "url": "http://localhost"
    },
    "staging": {
      "name": "Staging Server (v2.acps.dev)",
      "host": "v2.acps.dev",
      "user": "acps",
      "path": "/var/www/acps_v2",
      "method": "rsync",
      "url": "https://v2.acps.dev"
    },
    "production": {
      "name": "Production Kiosks (acps.alleycatphoto.net)",
